{
    "manifest_version": 1,
    "name": "Twitch Theatre Mode Control",
    "version": "1.0",
    "description": "This is a browser extension that allows Theatre Mode without the Tools menu popping up:",
    "content_scripts": [
        {
            "matches": [
                "*://*.twitch.tv/*"
            ],
            "js": [
                "controls.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "64": "icons/64.png",
        "128": "icons/128.png",
        "256": "icons/256.png"
    },
    "applications": {
        "gecko": {
            "id": "twitch-theatre-mode-control@FaddyGH.github.io"
        }
    }
}